@using Conservices.Screen.Models.Program
@using Conservices.Screen.Util

<div class="p-3" style="max-height: 45% !important; overflow: hidden;">
    <div class="h4">
        Als nächstes:
    </div>
    @if (NextItem != null)
    {
        <div class="lead" style="max-height: 70% !important; overflow: hidden">
            @NextItem.Title
        </div>
        <div class="h6">
            in: @NextItem.Start.ToLocalTime().TimeDelta() &shy; (@NextItem.Start.ToLocalTime().DayAndTime())
        </div>
    }
    else
    {
        <div class="lead">Nichts</div>
    }
    
</div>

@code {

    [Parameter]
    public ProgramItem? NextItem { get; set; }

}